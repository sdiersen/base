{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>IsEmployee</th>
                <th>IsMember</th>
                <th>Branch</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>Zip</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.isEmployee ? 'Yes' : 'No' }}</td>
                <td>{{ user.isMember ? 'Yes' : 'No' }}</td>
                <td>{{ user.branch ? user.branch|join(', ') : '' }}</td>
                <td>{{ user.streetAddress }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.zip }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
