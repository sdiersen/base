{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/layout.css') }}">
{% endblock %}

{% block title %}Login{% endblock %}

{% block body %}
    <form class="form-signin" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData,'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Login to FitEvoMN</h1>

        <label for="username" class="sr-only">Username:</label>
        <input type="text" id="username" name="username" class="form-control" value="{{ last_username }}" placeholder="Username" required autofocus />

        <label for="password" class="sr-only">Password:</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required/>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="remember_me"> Stay Logged In
            </label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        <p>Or</p>
        <a class="btn btn-success btn-lg btn-block" role="button" href="{{ path('base_register') }}">Create New Account</a>
    </form>
{% endblock %}
