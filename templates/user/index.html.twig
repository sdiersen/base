{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <div class="w-25">
    {% include('navigation/_navigation_user.html.twig') %}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" title="Show {{ user.username }}'s account"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('user_show', {'id': user.id}) }}" title="Edit {{ user.username }}'s account"><i class="far fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
